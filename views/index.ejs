<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="/styles/indexStyle.css" />
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>

    <!-- Search Form -->
    <form action="/search" method="GET" class="search-form">
      <input
        type="text"
        name="query"
        placeholder="Search messages..."
        required
      />
      <button type="submit">Search</button>
    </form>

    <ul>
      <% if (messages && messages.length > 0) { %> <%
      messages.forEach(function(message) { %>
      <li>
        <strong>User:</strong> <%= message.user %> <strong>Message:</strong> <%=
        message.message %>

        <form action="/delete" method="POST" style="display: inline">
          <input type="hidden" name="id" value="<%= message.id %>" />
          <button type="submit">Delete</button>
        </form>
      </li>
      <% }); %> <% } else { %>
      <li>No messages found.</li>
      <% } %>
    </ul>

    <!-- Actions Container -->
    <div class="actions-container">
      <a href="/new" class="add-message-link">Add a new message</a>
      <form action="/delete-all" method="POST" class="delete-all-form">
        <button type="submit">Delete All Messages</button>
      </form>
    </div>
  </body>
</html>
